DO $$
DECLARE
    start_time TIME := TIME '00:00:00'; -- Start at 12:00 AM
    end_time TIME;
    slot_date DATE := CURRENT_DATE; -- Use today's date
    hour_price FLOAT := 250.0; -- Default hour price, adjust as needed
    field_id INT := 2; -- Replace with a valid field ID
    pitch_id INT := 2; -- Replace with a valid pitch ID
    status TEXT := 'AVAILABLE'; -- Replace with a valid SlotStatus value
BEGIN
    FOR i IN 0..23 LOOP
        end_time := start_time + INTERVAL '1 hour'; -- Calculate end time
        INSERT INTO hourly_slot (slot_date, start_time, end_time, hour_price, status, field_id, pitch_id)
        VALUES (slot_date, start_time, end_time, hour_price, status, field_id, pitch_id);
        start_time := end_time; -- Move to the next hour
    END LOOP;
END $$;
